{
  "ConnectionStrings": {
    "DBConnection": "Server=localhost;Database=TCMA;Trusted_Connection=true;TrustServerCertificate=True;Encrypt=False;Connect Timeout=5"
  },
  "DatabaseSettings": {
    "CommandTimeoutSeconds": 30
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "RateLimiting": {
    "WriteOperations": {
      "PermitLimit": 5,
      "QueueLimit": 10
    },
    "ReadOperations": {
      "PermitLimit": 50,
      "WindowSeconds": 10,
      "SegmentsPerWindow": 5,
      "QueueLimit": 20
    }
  }
}
